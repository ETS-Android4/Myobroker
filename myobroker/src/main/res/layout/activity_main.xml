<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/tv_title"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_marginTop="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:textColor="@android:color/holo_purple"
        android:textSize="16pt"
        android:textStyle="italic"
        android:text="@string/my_myo"
         />

    <TextView
        android:id="@+id/textView_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@id/tv_title"
        android:gravity="center"
        android:text="@string/myo_message"
        android:textColor="@android:color/holo_purple"
        android:textSize="12pt" />

    <ImageView
        android:id="@+id/imv_banner"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@id/textView_hint"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:src="@drawable/myobroker_full_screen" />

<fragment xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          android:id="@+id/fragment"
          android:name="com.infalia.myonabler.myobroker.DebugFragment"
          tools:layout="@layout/fragment_debug"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

</fragment>
</LinearLayout>